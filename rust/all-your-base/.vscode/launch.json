    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'allyourbase'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=allyourbase"
                ],
                "filter": {
                    "name": "allyourbase",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'all-your-base'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=all-your-base",
                    "--package=allyourbase"
                ],
                "filter": {
                    "name": "all-your-base",
                    "kind": "test"
                }
            },
            "args": ["input_base_is_one"],
            "cwd": "${workspaceFolder}"
        }
    ]
}